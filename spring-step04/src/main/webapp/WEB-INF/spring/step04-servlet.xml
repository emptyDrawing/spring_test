<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- DataSource from tomcat -->
	<!--
	<bean id="dataSource" class="org.apache.tomcat.dbcp.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/mydb?serverTimezone=UTC" />
		<property name="username" value="scott"/>
		<property name="password" value="tiger"/>
	</bean>
	-->
	<bean  id="dataSource" class="org.apache.tomcat.dbcp.dbcp.BasicDataSource"
		p:driverClassName="com.mysql.cj.jdbc.Driver"
		p:url="jdbc:mysql://localhost:3306/mydb?serverTimezone=UTC"
		p:username="scott"
		p:password="tiger"
	/>
	<!-- template -->
	<bean id="template" class="org.springframework.jdbc.core.JdbcTemplate"
		p:dataSource-ref="dataSource"
	/>
	<!-- Connection?? Dao ?? -->
	<!-- 
	 <bean id="guestDao" class="com.bit.spring06.model.GuestDao01Imf"
	 	p:dateSource-ref="dataSource"
	 />
	 
	 <bean id="guestDao" class="com.bit.spring06.model.GuestDao02Imf">
	  	<constructor-arg ref="dataSource"></constructor-arg>
	 </bean>
	  -->
	<bean id="guestDao" class="com.bit.spring06.model.GuestDao03Imf"
		p:template-ref="template"/>
	
	<!-- Handler -->
	<bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"></bean>
	
	
	<!-- myCon -->
	<bean name="/index.bit" class="com.bit.spring06.controller.DefaultControllerr"
		p:viewName="index"
	/>
	<bean name="/list.bit" class="com.bit.spring06.controller.ListController"
		p:guestDao-ref="guestDao"
	/>
	
	<bean name="/detail.bit" class="com.bit.spring06.controller.BeanController"
		p:guestDao-ref="guestDao" p:viewName="detail"
	/>

	<bean name="/add.bit" class="com.bit.spring06.controller.DefaultControllerr"
		p:viewName="add"
	/>

	<!-- ViewResolver -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		p:prefix="/WEB-INF/view/"
		p:suffix=".jsp"
	/>
</beans>
